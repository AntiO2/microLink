<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn"
             targetNamespace="Examples">

    <process id="user-onboarding-process" name="User Onboarding Process" isExecutable="true">
        <startEvent id="start" />
        <sequenceFlow sourceRef="start" targetRef="manualApprovalTask" />

        <userTask id="manualApprovalTask" name="Manual Admin Approval" activiti:assignee="admin" />

        <sequenceFlow sourceRef="manualApprovalTask" targetRef="activateUserTask" />

        <serviceTask id="activateUserTask" name="Activate User"
                     activiti:delegateExpression="${userApprovalDelegate}" />

        <sequenceFlow sourceRef="activateUserTask" targetRef="end" />
        <endEvent id="end" />
    </process>
</definitions>
